<groot>:
    Screen:
        name: 'start_screen'
        FloatLayout:
            Button: 
                id: butt1
                text: 'start'
                font_size: 0.13*self.width
                size_hint: 0.5,0.17
                pos_hint: {'x':0.25, 'y':0.3}
                on_release:
                    root.clicked()
                    app.root.transition.direction = 'left'
                    if root.acc(): root.starto(); app.root.current = 'game_screen'
                    else: app.root.current = 'acc_screen'


    Screen:
        name: 'acc_screen'
        FloatLayout:
            TextInput:
                id: txinp1
                text: ''
                font_size: 0.13*self.width
                size_hint: 0.5,0.12
                pos_hint: {'x':0.25, 'y':0.7}
                focus: True
                halign: 'center'

            Button: 
                id: butt2
                text: 'login'
                font_size: 0.13*self.width
                size_hint: 0.5,0.17
                pos_hint: {'x':0.25, 'y':0.3}
                on_release:
                    root.player.username = root.ids.txinp1.text
                    root.clicked()
                    root.starto()
                    app.root.transition.direction = 'left'
                    app.root.current = 'game_screen'
                
        
    Screen:
        name: 'game_screen'     # yaha pe apne cards dikhenge, stats dikhenge
        FloatLayout:
            Label:
                id: play_stat_window
                color: 1,1,1,1
                pos_hint: {'x':0.04, 'y':0.32}
                size_hint: 0.2, 0.5
                markup: True
               # canvas.before:
                #    Color:
                 #       rgba: 1,0,0,1
                  #  Rectangle:
                   #     size: self.size
                    #    pos: self.pos
            
            Button:
                id: roll_butt
                text: 'Roll'
                pos_hint: {'x':0.83, 'y':0.75}
                size_hint: 0.15, 0.2
                on_release:
                    root.roll()
                    app.root.current = 'rolled_card_screen'
            
            Button:
                id: quiz_butt
                pos_hint: {'x':0.83, 'y':0.53}
                size_hint: 0.15, 0.2
                on_release:
                    root.qz_reset()
                    root.set_que()
                    app.root.current = 'quiz_screen'
            
            Button:
                id: dly_butt
                pos_hint: {'x':0.83, 'y':0.31}
                size_hint: 0.15, 0.2
                text: 'daily reward'
                on_release:
                    root.dly_reset()
                    root.player.dly_reward()
            
            Button:
                id: skill_butt
                text: 'skills'
                pos_hint: {'x':0.83, 'y':0.05}
                size_hint: 0.15, 0.2
                on_release:
                    app.root.current = 'skill_screen'

            Button:
                id: game_next_butt
                pos_hint: {'x':0.62, 'y':0.05}
                size_hint: 0.15, 0.2
                on_release:
                    root.tempID += 1
            
            Button:
                id: game_prev_butt
                pos_hint: {'x':0.27, 'y':0.05}
                size_hint: 0.15, 0.2
                on_release:
                    root.tempID -= 1

            Button:
                id: creds_butt
                text: 'credits'
                pos_hint: {'x':0.05, 'y':0.05}
                size_hint: 0.15, 0.2
                on_release:
                    app.root.current = 'creds_screen'

            GridLayout:
                cols: 2
                rows: 1
                pos_hint: {'x':0.27, 'y':0.32}
                size_hint_x: 0.5
                size_hint_y: 0.5
                Image: 
                    id: game_lang_card_img
                    allow_stretch: True
                    keep_ratio: False
                Label:
                    id: game_lang_card_stat
                    color: 1,0,1,1
                    text: 'hoho'
                   # canvas.before:
                    #    Color:
                     #       rgba: 0,1,0,1
                      #  Rectangle:
                       #     size: self.size
                        #    pos: self.pos
                


    Screen:
        name: 'rolled_card_screen'
        FloatLayout:
            Label:
                id: rolled_card_label
                pos_hint: {'x':0.27, 'y':0.86}
                size_hint: 0.5, 0.1

            Button:
                id: burn_butt
                pos_hint: {'x':0.62, 'y':0.05}
                size_hint: 0.15, 0.2
                text: 'burn'
                on_release:
                    root.player.burn(root.newID)
                    root.player.energy -= 300
                    app.root.current = 'game_screen'

            Button:
                id: keep_butt
                pos_hint: {'x':0.27, 'y':0.05}
                size_hint: 0.15, 0.2
                text: 'keep'
                on_release:
                    root.player.lvl_up_card(root.newID)
                    root.player.energy -= 300
                    app.root.current = 'game_screen'
          
            Button:
                id: rolled_to_game
                text: 'back'
                pos_hint: {'x':0.02, 'y':0.86}
                size_hint: 0.1, 0.1
                on_release:
                    app.root.current = 'game_screen'

            GridLayout:
                cols: 2
                rows: 1
                pos_hint: {'x':0.27, 'y':0.32}
                size_hint_x: 0.5
                size_hint_y: 0.5
                Image: 
                    id: rolled_card_img
                    source: 'dio.png'
                    allow_stretch: True
                    keep_ratio: False
                Label:
                    id: rolled_card_stat
                    color: 1,0,1,1
                    text: 'hoho'
                    canvas.before:
                        Color:
                            rgba: 0,1,0,1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                


    Screen:
        name: 'quiz_screen'
        FloatLayout:
            Button:
                id: opt1
                pos_hint: {'x':0.25, 'y':0.35}
                size_hint: 0.2, 0.15
                on_release: 
                    if root.que.ans==1: root.set_result(1)
                    else: root.set_result(0)
                    app.root.current = 'result_screen'
            
            Button:
                id: opt2
                pos_hint: {'x':0.62, 'y':0.35}
                size_hint: 0.2, 0.15
                on_release: 
                    if root.que.ans==2: root.set_result(1)
                    else: root.set_result(0)
                    app.root.current = 'result_screen'

            Button:
                id: opt3
                pos_hint: {'x':0.25, 'y':0.1}
                size_hint: 0.2, 0.15
                on_release: 
                    if root.que.ans==3: root.set_result(1)
                    else: root.set_result(0)
                    app.root.current = 'result_screen'
            
            Button:
                id: opt4
                pos_hint: {'x':0.62, 'y':0.1}
                size_hint: 0.2, 0.15
                on_release: 
                    if root.que.ans==4: root.set_result(1)
                    else: root.set_result(0)
                    app.root.current = 'result_screen'
            
            Button:
                id: quiz_to_game
                text: 'back'
                pos_hint: {'x':0.02, 'y':0.86}
                size_hint: 0.1, 0.1
                on_release:
                    app.root.current = 'game_screen'
        
            Label:
                id: que_label
                pos_hint: {'x':0.17, 'y':0.6}
                size_hint: 0.7, 0.2
                color: 1,0,1,1
                text: 'hoho'
                canvas.before:
                    Color:
                        rgba: 0,1,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos


    Screen:
        name: 'result_screen'
        FloatLayout:
            Button:
                id: result_to_game
                text: 'back'
                pos_hint: {'x':0.02, 'y':0.86}
                size_hint: 0.1, 0.1
                on_release:
                    app.root.current = 'game_screen'
            Label:
                id: result_label
                pos_hint: {'x':0.17, 'y':0.6}
                size_hint: 0.7, 0.2
                color: 1,0,1,1
                text: 'hoho'
                canvas.before:
                    Color:
                        rgba: 0,1,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
            


    Screen:
        name: 'skill_screen'
        FloatLayout:

            Button:
                id: skill_next_butt
                pos_hint: {'x':0.62, 'y':0.05}
                size_hint: 0.15, 0.2
                on_release:
                    root.tempID2 += 1
            
            Button:
                id: skill_prev_butt
                pos_hint: {'x':0.27, 'y':0.05}
                size_hint: 0.15, 0.2
                on_release:
                    root.tempID2 -= 1

            Button:
                id: buy_skill_butt
                pos_hint: {'x':0.445, 'y':0.05}
                size_hint: 0.15, 0.2
                text: 'Buy'
                on_release:
                    root.player.buy_skill(root.tempID2)
            
            Button:
                id: skill_to_game
                text: 'back'
                pos_hint: {'x':0.02, 'y':0.86}
                size_hint: 0.1, 0.1
                on_release:
                    app.root.current = 'game_screen'

            GridLayout:
                cols: 2
                rows: 1
                pos_hint: {'x':0.27, 'y':0.32}
                size_hint_x: 0.5
                size_hint_y: 0.5
                Image: 
                    id: skill_card_img
                    source: 'dio.png'
                    allow_stretch: True
                    keep_ratio: False
                Label:
                    id: skill_card_stat
                    color: 1,0,1,1
                    text: 'hoho'
                    canvas.before:
                        Color:
                            rgba: 0,1,0,1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                


    Screen:
        name: 'creds_screen'
        FloatLayout:
            Button:
                id: creds_to_game
                text: 'back'
                pos_hint: {'x':0.02, 'y':0.86}
                size_hint: 0.1, 0.1
                on_release:
                    app.root.current = 'game_screen'
            
            Label:
                id: lang_card_stat
                pos_hint: {'x':0.17, 'y':0.3}
                size_hint: 0.7, 0.5
                color: 1,0,1,1
                text: 'Dev Team:\nAniket Inamdar\nApoorv Chitnis\nAshutosh Mishra\nAtharva Dharmik\nBiju Saji\nTejaswini Joshi'
